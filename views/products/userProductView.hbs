{{#extends 'base'}}

{{#block 'content'}}
<link rel="stylesheet" type='text/css' href="/css/style.css"/>
<form method="GET">
    {{{form}}}
    <input type="submit" class="mb-3 mt-3 btn btn-primary" value="Search"/>
</form>



<table class="table">
    <thead>
        <tr>
             
            <th>ID</th>
            <th>Name</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Country</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.cost}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                {{this.country.name}}
            </td>
            <td>
                <img class="img-fluid" src="{{this.image_url}}"/>
            </td>
            
            <td>
  
                <a href="/carts/{{this.id}}/add" class="btn btn-success btn-sm">Add to cart</a>
                {{!-- <a href="/products/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a> --}}
                {{!-- <a href="/products/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a> --}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}

{{/extends}}