{{#extends 'base'}}
{{#block 'content'}}
<h1>Shopping Cart</h1>

<a href="/checkout" class="btn btn-primary">Checkout Now </a> 

<ul class="list-group">
    {{#each shoppingCart }} 
    <li class="list-group-item my-3">
        {{#each countryCart}}
        {{this.name}}
        {{/each}}
        
        <h4> {{this.name}}</h4>
        <h5>Cost: {{this.cost}}</h5>
        <h5>Quantity: {{this.quantity}}</h5>
        <form method="POST" action="/carts/{{this.product_id}}/quantity/update">
        <input type="hidden" value="{{../csrfToken}}" name="_csrf"/>
        <h5>
            Quantity: <input type="text" name="newQuantity" value="{{this.quantity}}" style="width: 30px;"/>
            <input type="submit" value="Update Quantity" class="btn btn-success btm-sm"/>
            
        </h5>
        </form>
    </li>
    <div>
        <a href="/carts/{{this.product_id}}/remove" class="btn btn-danger">Remove</a>
    </div>
    {{/each}} 
</ul>







{{/block}}
{{/extends}}